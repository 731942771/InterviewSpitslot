<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="anim_def" parent="android:Theme.NoTitleBar">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowAnimationStyle">@style/def_anim</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="def_anim" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/in_show</item>
        <item name="android:windowExitAnimation">@anim/out_hint</item>
    </style>

</resources>